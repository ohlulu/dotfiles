{
  // General IDE settings
  "files.dialog.defaultPath": "/Users/ohlulu/Developer",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.semanticHighlighting.enabled": true,
  "editor.minimap.enabled": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 20,
  "editor.fontFamily": "SF Mono",
  "editor.formatOnSave": true,
  "terminal.integrated.fontFamily": "monospace",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.orientation": "vertical",
  "update.releaseTrack": "prerelease",
  "window.newWindowDimensions": "inherit",
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/__pycache__": true
  },
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.colorTheme": "One Dark Pro",
  "oneDarkPro.color": {
    "green": "#e06c75",
    "coral": "#98c379"
  },
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#57595e94"
  },
  // Git related settings
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command"
  ],
  // --------Language specific settings--------
  // HTML
  "[html]": {
    "editor.defaultFormatter": "mohd-akram.vscode-html-format"
  },
  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  // JSONC
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Markdown
  "markdown-preview-enhanced.previewTheme": "vue.css",
  "markdown-preview-enhanced.codeBlockTheme": "vue.css",
  "markdown.extension.toc.levels": "3..6",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "yaml.schemas": {
    "file:///Users/ohlulu/.vscode/extensions/atlassian.atlascode-3.0.8/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  // JavaScript
  "eslint.format.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.formatOnSave": true
  },
  // Python
  "python.createEnvironment.trigger": "off",
  "[python]": {
    "editor.formatOnType": true
  },
  // Swift
  "[swift]": {
    "editor.defaultFormatter": "sweetpad.sweetpad",
    "editor.formatOnSave": true
  },
  // SQL
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  // Go
  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // Ruby
  "solargraph.commandPath": "/Users/ohlulu/.rbenv/shims/solargraph",
  "solargraph.useBundler": false,
  "ruby.rubocop.onSave": true,
  // Dart
  "dart.flutterSdkPath": "~/flutter",
  // Prettier
  "prettier.tabWidth": 4,
  "prettier.printWidth": 150,
  // IndentRainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.errorColor": "",
  // 外掛設定 - Cursor
  "cursor.cmdk.autoSelect": false,
  "cursor.composer.agentLoopOnLints": false,
  "cursor.cpp.enablePartialAccepts": true,
  "cursor-retrieval.canAttemptGithubLogin": false,
  // git repot manager
  "gitProjectManager.baseProjectsFolders": [
    "~/Developer/"
  ],
  // 開發工具設定
  "lldb.library": "/Applications/Xcode-15.4.0.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
  "lldb.launch.expressions": "native",
  "makefile.configureOnOpen": true,
  "cmake.showOptionsMovedNotification": false,
  // 其他設定
  "redhat.telemetry.enabled": true,
  "cursor.cpp.disabledLanguages": [],
  "cursor.terminal.usePreviewBox": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "git.replaceTagsWhenPull": true,
}